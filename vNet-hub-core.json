{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  // AzuRA - Central Hub
  // By Catalin Magher -={ mail@catalin.at }=- | https://www.linkedin.com/in/catalinmagher
  // November 2017
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "defaultValue": "VNET-CentralHub",
      "metadata": {
        "description": "AzuRA - Central HUB - VNET Deployment"
      }
    },

    "location": {
      "defaultValue": "West Europe",
      "type": "string",
      "metadata": {
        "description": "Select your Datacenter location"
      },
      "allowedValues": [
        "North Europe",
        "West Europe",
      ]
    }
  },

  "variables": { },
  "resources": [
    {

      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnetName')]",
      "apiVersion": "2016-03-30",
      "location": "[parameters('location')]",
      "tags": {
        "displayname": "[parameters('vnetName')]"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.76.127.0/24"
          ]
        },
        "dhcpOptions": {
          "dnsServers": [
            "8.8.8.8",
            "8.8.4.4"
          ]
        },
        
        "subnets": [
          {
            "name": "Subnet-ExpressRouteGateway",
            "properties": {
              "addressPrefix": "10.76.127.0/27"
            }

          },
          {
            "name": "snet-transit-outside",
            "properties": {
              "addressPrefix": "172.16.0.32/27"

            }

          },
          {
            "name": "snet-transit-trusted",
            "properties": {
              "addressPrefix": "172.16.0.64/27"

            }



          },



          {
            "name": "snet-transit-untrusted",
            "properties": {
              "addressPrefix": "172.16.0.96/27"

            }



          },




          {
            "name": "snet-transit-semitrusted",
            "properties": {
              "addressPrefix": "172.16.0.128/27"

            }

          },
          {
            "name": "snet-core-trusted",
            "properties": {
              "addressPrefix": "172.16.1.0/24"

            }

          },

          {
            "name": "snet-core-untrusted",
            "properties": {
              "addressPrefix": "172.16.2.0/24"

            }

          },

          {
            "name": "snet-core-semitrusted",
            "properties": {
              "addressPrefix": "172.16.3.0/24"

            }



          }

        ]
      }


    }
  ]
}